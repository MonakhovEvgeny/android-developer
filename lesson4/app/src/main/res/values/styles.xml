<resources>

    <!-- Основная тема приложения -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета темы -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">#F5F5F5</item>

        <!-- Стиль для CheckBox -->
        <item name="checkboxStyle">@style/CustomCheckBox</item>
    </style>

    <!-- Базовый стиль для заголовков -->
    <style name="TextAppearance.App.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Стиль для отображения количества баллов (наследует стиль заголовков) -->
    <style name="TextAppearance.App.Score" parent="TextAppearance.App.Heading">
        <item name="android:textColor">#444444</item>
    </style>

    <!-- Стиль для CheckBox -->
    <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:buttonTint">#03DAC5</item> <!-- Цвет чекбоксов -->
    </style>

</resources>

